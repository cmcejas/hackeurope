{
  "expo": {
    "name": "hackeurope",
    "slug": "hackeurope",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hackeurope",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1C1C1E",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "backgroundColor": "#1C1C1E",
      "title": "PollenCast – AI Allergy & Eye Health Screening",
      "description": "Multimodal allergy diagnostic tool that differentiates allergic conjunctivitis from viral and bacterial infections using vocal biomarkers, ocular analysis, and local pollen data.",
      "lang": "en",
      "themeColor": "#FF9500",
      "meta": {
        "og:title": "PollenCast – AI Allergy & Eye Health Screening",
        "og:description": "Analyse your eye health and detect allergy symptoms using AI-powered vision, voice, and real-time pollen data.",
        "og:type": "website",
        "og:image": "./assets/images/icon.png",
        "twitter:card": "summary_large_image",
        "twitter:title": "PollenCast – AI Allergy & Eye Health Screening",
        "twitter:description": "AI-powered allergy and eye health screening using camera, voice, and pollen data."
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1C1C1E",
          "dark": {
            "backgroundColor": "#1C1C1E"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
